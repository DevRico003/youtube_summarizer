generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  topicEdits      UserTopicEdit[]
  preferences     UserPreference?
  usageLogs       ApiUsageLog[]
  promptTemplates PromptTemplate[]
}

model Summary {
  id            String   @id @default(cuid())
  videoId       String   @unique
  title         String
  content       String
  transcript    String
  hasTimestamps Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  topics     Topic[]
  topicEdits UserTopicEdit[]
}

model Topic {
  id        String   @id @default(cuid())
  summaryId String
  title     String
  startMs   Int
  endMs     Int
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  summary    Summary         @relation(fields: [summaryId], references: [id], onDelete: Cascade)
  topicEdits UserTopicEdit[]
}

model UserTopicEdit {
  id            String  @id @default(cuid())
  userId        String
  summaryId     String
  topicId       String
  customTitle   String?
  customStartMs Int?
  customEndMs   Int?

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  summary Summary @relation(fields: [summaryId], references: [id], onDelete: Cascade)
  topic   Topic   @relation(fields: [topicId], references: [id], onDelete: Cascade)

  @@unique([userId, topicId])
}

model UserPreference {
  id             String  @id @default(cuid())
  userId         String  @unique
  language       String  @default("en")
  detailLevel    Int     @default(3)
  preferredModel String  @default("glm-4.7")
  thinkingMode   Boolean @default(false)
  customPrompt   String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ApiUsageLog {
  id          String   @id @default(cuid())
  userId      String?
  service     String
  endpoint    String
  creditsUsed Float    @default(0)
  tokensUsed  Int      @default(0)
  timestamp   DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model AppConfig {
  id             String @id @default(cuid())
  key            String @unique
  encryptedValue String
}

model PromptTemplate {
  id        String   @id @default(cuid())
  userId    String
  name      String
  content   String
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
}
